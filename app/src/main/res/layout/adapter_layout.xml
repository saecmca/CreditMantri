<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:elevation="3dp"
    android:layout_margin="3dp"
    card_view:cardCornerRadius="4dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView

            android:id="@+id/tvName"
            android:layout_gravity="center"
            android:layout_weight="1.4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:layout_weight="0.7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textColor="#ffffff"
                android:background="#f0ad4f"
                android:id="@+id/tvCel1"
                android:text="asfasfasdf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:background="#9a9a9a"
                android:textColor="#ffffff"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/tvCel2"
                android:text="asfasfasdf"
                  android:layout_toRightOf="@+id/tvCel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_toRightOf="@id/tvCel2"
                android:id="@+id/tvClouds"
                android:text="asfasfasdf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvmill"
                android:layout_below="@+id/tvCel1"
                android:text="asfasfasdf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvcloud"
                android:layout_below="@+id/tvmill"
                android:text="asfasfasdf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/share"
                android:src="@drawable/ic_share"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
